<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /NOTRE-DAME/

    # Autoriser l'accès direct aux fichiers PHP dans admin/ajax/
    RewriteRule ^admin/ajax/(.*\.php)$ - [L]

    # Autoriser l'accès direct à index.php, mass.php, etc.
    RewriteRule ^(index|mass|about|contact|...)\.php$ - [L]

    # Empêcher l'accès direct aux autres fichiers PHP
    RewriteCond %{REQUEST_URI} \.php$
    # RewriteRule ^ - [F]
</IfModule>